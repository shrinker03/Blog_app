<%- include("../partials/header.ejs") %>
<div class="container">
    <div id="main-text-container-1" class="ui main text container">
        <div class="ui huge header text-center">Blogs</div>
            <div class="ui top attached segment"> 
                <div class="ui divided items">
                    <div class="col-md-12 text-center">
                        <% if(noMatch !== null){ %>
                            <h3><%= noMatch %></h3>
                        <% } %>
                    </div>
                    <% blogs.forEach(function(blog){ %>
                        <div class="item">
                            <div class="image">
                                <img src="<%= blog.image %>">
                            </div>
                            <div class="content">
                                <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                                <div class="meta">
                                    <span><%= moment(blog.createdAt).format('LL') %></span>
                                </div>
                                <div class="description">
                                    <p><%= blog.body.substr(0,300) %>......</p>
                                </div>
                                <div class="extra">
                                    <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">Read More</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>    
    </div>
</div>
<%- include("../partials/footer.ejs") %>
